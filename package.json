{
	"name": "vigilant-octopus",
	"version": "1.0.0",
	"description": "The monolith server for Caregiver app.",
	"main": "dist/src/index.js",
	"repository": "",
	"authors": [
		"Ian-Balijawa",
		"flaming-streamz"
	],
	"license": "MIT",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts",
		"serve": "node dist/src/index.js",
		"test": "jest --coverage=false --verbose",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-js": "nodemon dist/src/index.js",
		"watch-ts": "tsc -w",
		"build-ts": "tsc",
		"lint": "eslint src/*.ts",
		"lint-fix": "yarn lint --fix",
		"debug": "npm run build && npm run watch-debug",
		"serve-debug": "nodemon --inspect dist/src/index.js",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
		"typecheck": "tsc --noEmit",
		"run-prettier": "prettier src/*.ts",
		"validate-prettiness": "yarn run-prettier -c",
		"make-prettier": "yarn run-prettier --write"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.3.1",
		"@flydotio/dockerfile": "^0.4.9",
		"@types/node-cron": "^3.0.11",
		"@types/uuid": "^9.0.7",
		"@types/bull": "^4.10.0",
		"@types/compression": "^1.7.2",
		"@types/config": "^3.3.0",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/http-errors": "1.8.2",
		"@types/jest": "^29.5.5",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/mocha": "^10.0.2",
		"@types/module-alias": "^2.0.2",
		"@types/morgan": "^1.9.4",
		"@types/multer": "^1.4.10",
		"@types/node": "^20.5.1",
		"@types/nodemailer": "^6.4.9",
		"@types/supertest": "^2.0.14",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"babel-jest": "^29.6.4",
		"concurrently": "6.5.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "8.10.0",
		"eslint-plugin-import": "2.29.0",
		"jest": "^29.6.4",
		"nodemon": "2.0.22",
		"prettier": "^3.0.2",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3",
		"vitest": "^0.34.6"
	},
	"dependencies": {
		"@typegoose/typegoose": "^11.4.1",
		"argon2": "^0.31.0",
