{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015", "dom"],
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/interfaces", "./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts", "interfaces/**/*.ts"]
}
